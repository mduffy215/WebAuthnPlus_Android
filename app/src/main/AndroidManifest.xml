<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tnxsecure.webauthnplus" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:name="com.tnxsecure.webauthnplus.WebAuthnPlus"
        android:allowBackup="false"
        android:icon="@mipmap/ic_tnx_c"
        android:logo="@mipmap/ic_tnx_d"
        android:label="@string/app_name"
        android:theme="@style/DarkActionBarTheme"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name="com.tnxsecure.webauthnplus.ActivatePassword"
            android:label="@string/activity_label_activate" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                      android:host="www.webauthnplus.com"
                      android:pathPattern="/.*" />
                <!-- https://stackoverflow.com/questions/35304745/android-matching-host-pattern-in-an-intent-filter -->
            </intent-filter>
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.AboutTnx"
            android:label="@string/activity_label_about_tnx" >
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.Profile"
            android:label="@string/activity_label_profile" >
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.Credentials"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/activity_label_credentials" >
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.PersonalData"
            android:label="@string/activity_label_personal_data" >
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.Contacts"
            android:label="@string/activity_label_send_funds" >
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.fundstransfer.SendFunds"
            android:label="@string/activity_label_send_funds" >
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.fundstransfer.ReceiveFunds"
            android:label="@string/activity_label_receive_funds" >
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.fundstransfer.ConfirmFunds"
            android:label="@string/activity_label_confirm_funds" >
        </activity>
        <activity
            android:name="com.tnxsecure.webauthnplus.distributedledger.Signature"
            android:label="@string/activity_label_dlt_signature" >
        </activity>
        <activity android:name=".ActivityBase"/>
        <activity android:name=".ListActivityBase"/>

        <service android:name="com.tnxsecure.webauthnplus.firebase.TnxFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name="com.tnxsecure.webauthnplus.firebase.TnxFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>
