<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,ButtonStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginTop="6dp"
            android:background="@color/bar_color"/>

        <TextView
            android:id="@+id/activate_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="6dp"
            android:text="@string/activate_message"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_text"
            android:typeface="normal"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:paddingBottom="10dp"
            android:background="@color/bar_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/password"
                android:textColor="@color/label_color"
                android:textSize="@dimen/font_size_label"
                android:textStyle="bold"
                android:typeface="normal"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:ems="10"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/verify_password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/verify_password"
                android:textColor="@color/label_color"
                android:textSize="@dimen/font_size_label"
                android:textStyle="bold"
                android:typeface="normal"/>

            <EditText
                android:id="@+id/verify_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:ems="10"
                android:inputType="textPassword"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:paddingTop="10dp"
            android:background="@color/bar_color"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="6dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/warning_color"
            android:textSize="@dimen/font_size_text"
            android:textStyle="bold"
            android:typeface="normal"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:background="@color/bar_color"/>

        <Button
            android:id="@+id/activate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:height="40dp"
            android:background="@drawable/button_gradient"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/activate"
            android:textColor="@color/button_label_color"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:background="@color/bar_color"/>

    </LinearLayout>
</LinearLayout>
