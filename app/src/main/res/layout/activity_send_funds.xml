<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginTop="6dp"
            android:background="@color/bar_color" >
        </View>

        <TextView
            android:id="@+id/message_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:text="@string/funds_transfer_message"
            android:textColor="@color/alert_color"
            android:textSize="@dimen/font_size_text"
            android:textStyle="bold"
            android:typeface="normal" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginTop="6dp"
            android:background="@color/bar_color" >
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/image_credential_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/credential_icon"/>

            <TextView
                android:id="@+id/provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image_credential_icon"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_text"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/provider_url"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/provider_name"
                android:layout_toRightOf="@+id/image_credential_icon"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="0dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_text"
                android:typeface="normal" />

            <TextView
                android:id="@+id/display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/provider_url"
                android:layout_toRightOf="@+id/image_credential_icon"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="0dp"
                android:textColor="@color/emphasis_color"
                android:textSize="@dimen/font_size_text"
                android:textStyle="bold"
                android:typeface="normal" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginTop="6dp"
            android:background="@color/bar_color" >
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/recipient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/emphasis_color"
                android:textSize="@dimen/font_size_text"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/recipient_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipient_name"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="0dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_text"
                android:typeface="normal" />

            <TextView
                android:id="@+id/recipient_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipient_phone_number"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="0dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_text"
                android:textStyle="bold"
                android:typeface="normal" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginTop="6dp"
            android:background="@color/bar_color" >
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/account_balance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="@string/account_balance_label"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_text"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/account_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/account_balance_label"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_text"
                android:typeface="normal" />

            <TextView
                android:id="@+id/transfer_amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_balance_label"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:text="@string/transfer_amount_label"
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_size_text"
                android:textStyle="bold"
                android:typeface="normal" />

            <EditText
                android:id="@+id/transfer_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transfer_amount_label"
                android:ems="10"
                android:inputType="numberDecimal"/>

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transfer_amount"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_gradient"
                android:height="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/send"
                android:textColor="@color/button_label_color"
                android:textSize="12sp"
                android:textStyle="bold" >
            </Button>

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transfer_amount"
                android:layout_toRightOf="@+id/send_button"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_gradient"
                android:height="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/cancel"
                android:textColor="@color/button_label_color"
                android:textSize="12sp"
                android:textStyle="bold" >
            </Button>

            <TextView
                android:id="@+id/message_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_button"
                android:paddingTop="6dp"
                android:paddingRight="4dp"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:text="@string/funds_transfer_message"
                android:textColor="@color/emphasis_color"
                android:textSize="@dimen/font_size_text"
                android:textStyle="bold"
                android:typeface="normal" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bar_height"
            android:layout_marginTop="6dp"
            android:background="@color/bar_color" >
        </View>

    </LinearLayout>

</LinearLayout>