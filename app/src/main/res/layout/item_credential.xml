<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:ignore="RtlHardcoded,ButtonStyle,TooManyViews" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_marginTop="6dp"
        android:background="@color/bar_color" >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient" >

        <ImageView
            android:id="@+id/image_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/credential_icon"/>

        <TextView
            android:id="@+id/provider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_view_icon"
            android:paddingBottom="0dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_text"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/provider_url"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/provider_name"
            android:layout_toRightOf="@+id/image_view_icon"
            android:paddingBottom="0dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="0dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_size_text"
            android:typeface="normal" />

        <TextView
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/provider_url"
            android:layout_toRightOf="@+id/image_view_icon"
            android:paddingBottom="0dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="0dp"
            android:textColor="@color/emphasis_color"
            android:textSize="@dimen/font_size_text"
            android:textStyle="bold"
            android:typeface="normal" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_marginTop="4dp"
        android:background="@color/bar_color" >
    </View>

</LinearLayout>